{
  "meta": {
    "description": "Design tokens for AI Chat feature - extends existing app tokens",
    "note": "These tokens supplement the existing design system. Use app's existing color/spacing tokens where applicable."
  },
  "chat": {
    "colors": {
      "userBubble": {
        "background": "{color.semantic.interactive.primary}",
        "text": "{color.semantic.text.inverse}"
      },
      "assistantBubble": {
        "background": "{color.semantic.background.secondary}",
        "text": "{color.semantic.text.primary}"
      },
      "codeBlock": {
        "background": "{color.primitive.gray.900}",
        "text": "{color.primitive.gray.100}",
        "border": "{color.primitive.gray.700}"
      },
      "welcome": {
        "background": "{color.semantic.background.primary}",
        "text": "{color.semantic.text.secondary}"
      },
      "suggestion": {
        "background": "{color.semantic.background.elevated}",
        "backgroundHover": "{color.semantic.background.secondary}",
        "text": "{color.semantic.text.primary}",
        "border": "{color.semantic.border.default}"
      },
      "attachment": {
        "background": "{color.semantic.background.secondary}",
        "border": "{color.semantic.border.default}",
        "removeButton": "{color.primitive.status.error}"
      },
      "loading": {
        "dot": "{color.semantic.text.disabled}",
        "dotActive": "{color.semantic.text.secondary}"
      }
    },
    "spacing": {
      "messageGap": "{spacing.3}",
      "bubblePadding": "{spacing.3} {spacing.4}",
      "composerPadding": "{spacing.3}",
      "attachmentGap": "{spacing.2}",
      "welcomePadding": "{spacing.6}"
    },
    "sizing": {
      "maxBubbleWidth": "85%",
      "attachmentThumbnail": "60px",
      "attachmentThumbnailRadius": "{borderRadius.md}",
      "composerMinHeight": "44px",
      "composerMaxHeight": "200px",
      "suggestionMinWidth": "200px"
    },
    "typography": {
      "message": {
        "fontSize": "{typography.fontSize.sm}",
        "lineHeight": "{typography.lineHeight.normal}"
      },
      "code": {
        "fontFamily": "{typography.fontFamily.mono}",
        "fontSize": "{typography.fontSize.xs}"
      },
      "welcome": {
        "fontSize": "{typography.fontSize.base}",
        "fontWeight": "{typography.fontWeight.medium}"
      },
      "timestamp": {
        "fontSize": "{typography.fontSize.xs}",
        "color": "{color.semantic.text.disabled}"
      }
    },
    "animation": {
      "messageFadeIn": "150ms ease-out",
      "loadingPulse": "1.4s ease-in-out infinite",
      "suggestionHover": "150ms ease"
    }
  },
  "history": {
    "colors": {
      "button": {
        "default": "{color.semantic.text.secondary}",
        "hover": "{color.semantic.text.primary}",
        "disabled": "{color.semantic.text.disabled}"
      },
      "indicator": {
        "text": "{color.semantic.text.disabled}",
        "background": "{color.semantic.background.secondary}"
      }
    },
    "sizing": {
      "buttonSize": "32px",
      "iconSize": "16px"
    }
  }
}
